								<h5>Company Email:{{companymail}}</h5>
								<h5>Job Type:{{jobtype}}</h5>
								<h5>Job Category:{{jobcategory}}</h5>
								<h5>Qualification:{{qualification}}</h5>
								<h5>Job location:{{location}}</h5>
								<h5>Address:{{address}}</h5>
								<img class="page-title" src="{{companylogo.img}}" height="20" width="20">
								<button type="submit" class="btn btn-primary btn-lg">Apply</button>
								<a type="reset" href="/role" class="btn btn-warning btn-lg">Cancel</a>
							</div>
						</form>
					</div>
					{{/unless}}
				{{/each}}
