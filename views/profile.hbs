<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	<title>Leave Application</title>

	<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/bs-3.3.5/jq-2.1.4,dt-1.10.8/datatables.min.css" />

	<script type="text/javascript" src="https://cdn.datatables.net/r/bs-3.3.5/jqc-1.11.3,dt-1.10.8/datatables.min.js"></script>
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function() {
			$('#example').DataTable();
		});
	</script>
</head>

<body>
	<div class="container">


<div class="page animsition">
    <div class="page-header">
      <!-- <h1 class="page-title"></h1> -->
			<h1>{{#if profile}}
			  <img class ="page-title" src="{{profile}}" height="50" width="50">
			{{/if}}{{user}}</img></h1>
      <div class="page-header-actions">
        <ol class="breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/update">Update Profile</a></li>
					<li><a href="/viewpost">View New Posts</a></li>
          <li><a href="/logout">Logout</a></li>
        </ol>
      </div>
    </div>
		<!-- <div class="page-header text-center">
			  <h1><span class="glyphicon glyphicon grain" aria-hidden="true"></span>{{user}}</h1>
				<a href="/logout" class="btn btn-default btn-sm">Logout</a><br/><br/>
				<a href="/update" class="btn btn-default btn-sm">Update Profile</a>
		</div> -->

{{#if leave}}
			<table id="example" class="display" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th>Leave Type</th>
						<th>Leave From</th>
						<th>Leave To</th>
						<th>Reason</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					{{#each leave}}

						<tr>

							<td>{{leavetype}}</td>
							<td>{{leavefrom}}</td>
							<td>{{leaveto}}</td>
							<td>{{reason}}</td>
							<td>
								{{#if notify}}
									{{#if status}}
										Accept
									{{else}}
										Reject
									{{/if}}
								{{else}}
									Pending
								{{/if}}

							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{else}}
			No Leaves Found
		{{/if}}
    <br/>
		<a href="/applyleave" class="btn btn-primary">Apply New Leave</a>


	</div>

	<script type="text/javascript">
		// For demo to fit into DataTables site builder...
		$('#example')
			.removeClass('display')
			.addClass('table table-striped table-bordered');
	</script>
</body>

</html>
